<Window x:Class="BP2Projekt.WindowSudionik"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BP2Projekt" xmlns:viewmodels="clr-namespace:BP2Projekt.ViewModels"
        mc:Ignorable="d"
        Title="Novi sudionik" Height="250" Width="350"
        Icon="../Resources/esportsIco.png">
   
    <Grid Name="igracGrid" Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="27" />
            <RowDefinition Height="27" />
            <RowDefinition Height="27" />
            <RowDefinition Height="27" />
            <RowDefinition Height="15" />
            <RowDefinition Height="28" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>

        <RadioButton Name="radioIgrac" IsChecked="{Binding Path=RadioModel.JeIgrac, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="3" Grid.Row="1" HorizontalAlignment="Left" Content="Igrač"/>
        <RadioButton Name="radioTrener" IsChecked="{Binding Path=RadioModel.JeTrener, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="4" Grid.Row="1" HorizontalAlignment="Right" Content="Trener"/>

        <Label Content="Nick:" Grid.Column="1" Grid.Row="2" />
        <TextBox Name="tbNick" Grid.Column="3" Grid.Row="2" Height="20" Text="{Binding Path=Sudionik.Nick}"/>

        <Label Content="Organizacija:" Grid.Column="1" Grid.Row="3" />
        <ComboBox Name="comboOrganizacija" Grid.Column="3" Grid.Row="3" Height="20" 
                  ItemsSource="{Binding Path=ListaOrganizacije}" SelectedItem="{Binding Path=Organizacija}" DisplayMemberPath="Naziv"/>

        <Label Content="Igra:" Grid.Column="1" Grid.Row="4" />
        <ComboBox Name="comboIgra" Grid.Column="3" Grid.Row="4" Height="20"/>

        <Label Content="Uloga:" Grid.Column="1" Grid.Row="5" />
        <ComboBox Name="comboUloga" Grid.Column="3" Grid.Row="5" Height="20"/>

        <Button Name="btnOsvjezi" Content="Dodaj" HorizontalAlignment="Right"
                Margin="3" MinWidth="80" Grid.Column="3" Grid.Row="7" 
                Command="{Binding Path=DodajSudionikaCommand}"/>
    </Grid>
</Window>
